<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana1EdisonMendozaB.Ejercicio">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="OPERACIONES" HorizontalTextAlignment="Center" FontSize="20" TextColor="Red">
                
            </Label>
            <Entry x:Name="txtDato1" Placeholder="Ingrese un dato" Keyboard="Numeric"
                ></Entry>
            <Entry x:Name="txtDato2" Placeholder="Ingrese otro dato" Keyboard="Numeric"> 
                
            </Entry>
            <Entry x:Name="txtResultado" IsReadOnly="True"></Entry>
            <Button x:Name="btnSumar"
                    Text="SUMAR"
                    Clicked="btnSumar_Clicked" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>